{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error", "^0.8.7"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "prettier/prettier": "error"
  }
}
