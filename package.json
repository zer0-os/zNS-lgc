    "logdown": "3.3.1",
    "operator-filter-registry": "1.3.1",
    "prettier": "2.6.2",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "3.3.3",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.16",
    "ts-generator": "0.1.1",
